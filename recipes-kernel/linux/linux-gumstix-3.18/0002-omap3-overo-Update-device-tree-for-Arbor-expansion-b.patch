+	accel_mag_pins: pinmux_accel_mag_pins {
+		pinctrl-single,pins = <
+			OMAP3_CORE1_IOPAD(0x219a, PIN_INPUT | MUX_MODE4)        /* uart3_cts_rctx.gpio_163 */
+		>;
+	};
