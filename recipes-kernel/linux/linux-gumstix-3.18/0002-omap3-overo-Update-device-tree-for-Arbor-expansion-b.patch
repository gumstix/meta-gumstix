+		pinctrl-names = "default";
+		pinctrl-0 = <&accel_mag_pins &accel_mag_pins2>;
+
+		compatible = "st,lsm303d";
+		reg = <0>;
+		// INT/DRDY #1 is gpio_18
+		// INT/DRDY #2 is gpio_163
+	};
+
+	/* L3GD20H 3-axis Gyro */
+	gyro@1 {
+		pinctrl-names = "default";
+		pinctrl-0 = <&gyro_pins>;
+
+		compatible = "st,l3dg20";
+		reg = <1>;
+		// INT/DRDY is gpio_114
+	};
+};
