+		pinctrl-single,pins = <
+			OMAP3_CORE1_IOPAD(0x2138, PIN_INPUT | MUX_MODE4)        /* csi2_dx1.gpio_114 */
+		>;
+	};
+};
+
+&mcspi1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&mcspi1a_pins>;
+
+	// TODO: we need SPI binding for the IMU components
